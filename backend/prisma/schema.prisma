datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String     @id @default(cuid())
  title     String
  content   String
  createdAt DateTime   @default(now())
  authorId  String
  comments  Comment[]  // ‚Üê add this
}


model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  authorId  String
}
